// https://www.typescriptlang.org/tsconfig
{
    "compilerOptions": {
        // Type Checking
        "strict": true,
        // Modules
        "baseUrl": "./",
        "moduleResolution": "node",
        "module": "commonjs",
        "resolveJsonModule": true,
        "rootDir": "./src",
        // Emit
        "outDir": "./dist",
        // Interop Constraints
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        // Language and Environment
        "target": "ES2020",
        // Completeness
        "skipLibCheck": true,
    },
}
